{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "tinycase",
  "title": "TinyCase",
  "description": "Quick text case converter running locally - convert selected text or clipboard content to camelCase, PascalCase, snake_case, kebab-case, and more",
  "icon": "command-icon.svg",
  "author": "ndanhkhoi",
  "license": "MIT",
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "commands": [
    {
      "name": "command",
      "title": "Convert Text Case",
      "description": "Convert selected text or clipboard content to different cases",
      "mode": "view",
      "preferences": [
        {
          "name": "outputMode",
          "type": "dropdown",
          "required": false,
          "title": "Output Mode",
          "description": "How to output the converted text",
          "default": "paste",
          "data": [
            {
              "title": "Paste (replace selection)",
              "value": "paste"
            },
            {
              "title": "Copy to clipboard",
              "value": "clipboard"
            }
          ]
        },
        {
          "name": "defaultCase",
          "type": "dropdown",
          "required": false,
          "title": "Default Case",
          "description": "Default case type when opening the command",
          "default": "camel",
          "data": [
            {
              "title": "camelCase",
              "value": "camel"
            },
            {
              "title": "PascalCase",
              "value": "pascal"
            },
            {
              "title": "snake_case",
              "value": "snake"
            },
            {
              "title": "kebab-case",
              "value": "kebab"
            },
            {
              "title": "CONSTANT_CASE",
              "value": "constant"
            },
            {
              "title": "Title Case",
              "value": "title"
            },
            {
              "title": "Sentence case",
              "value": "sentence"
            },
            {
              "title": "lowercase",
              "value": "lower"
            },
            {
              "title": "UPPERCASE",
              "value": "upper"
            }
          ]
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.83.2",
    "change-case": "^5.4.4"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "20.8.10",
    "@types/react": "18.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.4.5"
  }
}
